{
  "name": "express-wp",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "?format": "echo Formats your code",
    "format": "prettier --write \"./*.*\" \"./src/**/*.*\"",
    "?clean": "echo Empties the output dir",
    "clean": "rimraf ./dist",
    "compile:app": "ngc",
    "?build": "echo Builds the package (app and server)",
    "build": "cross-env NODE_ENV=production npm-run-all -p build:*",
    "build:server": "tsc -p tsconfig.server.json",
    "build:app": "webpack --progress",
    "?rebuild": "echo Clean and Build",
    "rebuild": "npm-run-all clean build",
    "?serve": "echo serve the development version (app with hmr)",
    "serve": "cross-env PROXY=http://localhost:3002 nodemon -e js,ejs dist/server.js",
    "?serve_prod": "echo serve the production version (staticly built app without hmr)",
    "serve_prod": "cross-env NODE_ENV=production npm run serve",
    "start": "npm-run-all -p \"build:server -- --watch\" serve",
    "start_prod": "npm-run-all rebuild serve_prod",
    "info": "npm-scripts-info"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/router": "^6.0.3",
    "compression": "^1.7.3",
    "core-js": "^2.5.4",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "http-proxy-middleware": "^0.19.0",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular-devkit/build-optimizer": "^0.8.5",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@angularclass/hmr": "^2.1.3",
    "@ngtools/webpack": "^6.2.5",
    "@types/node": "^10.11.7",
    "@types/webpack-env": "^1.13.6",
    "angular2-template-loader": "^0.6.2",
    "cross-env": "^5.2.0",
    "ejs-loader": "^0.3.1",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "npm-scripts-info": "^0.3.9",
    "prettier": "^1.14.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "ts-loader": "^5.2.1",
    "typescript": "^2.9.2",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.1.4"
  }
}
